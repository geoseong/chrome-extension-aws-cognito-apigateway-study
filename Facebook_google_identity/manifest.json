{
  "name": "chrome.identity example",
  "version": "1.2",
  "manifest_version": 2,

  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "browser_style": true
  },
  "permissions": [
    "identity",
    "*://www.facebook.com/*",
    "*://graph.facebook.com/*",
    "*://www.googleapis.com/*",
    "*://accounts.google.com/*"
  ]
}